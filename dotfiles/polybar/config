[colors]
background = #002F343F
foreground = #EBEBEB
poweritems = #DBDBDB

[bar/statusbar]
monitor = HDMI-0 
width = 100%
height = 30
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 1
padding-right = 1

separator = |

module-margin-left = 1
module-margin-right = 1

font-0 = Inconsolata:pixelsize=9;2

modules-left = i3 spotify
modules-right = cpu memory pulseaudio eth date

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.background}

label-unfocused = â€¢  
label-unfocused-foreground = #afafaf
label-unfocused-padding = 1

label-focused = | 
label-focused-padding = 1

label-urgent = |
label-urgent-padding = 1

label-visible = |
label-visible-padding = 1

[module/spotify]
type = custom/script
interval = 2
format = <label>
format-padding = 1
exec = ~/.config/polybar/spotify -f '{artist} :: {song}' -t 100 -q

[module/wlan]
type = internal/network
interface = wlp0s20f3
interval = 3.0

format-connected = <label-connected>

label-connected = %local_ip% // %signal%%

format-disconnected =

[module/eth]
type = internal/network
interface = enp4s0
interval = 3.0

format-connected = <label-connected>
label-connected = %local_ip%
format-disconnected =

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-muted = 0%

label-volume = %percentage%%

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC

format-discharging = <ramp-capacity><label-discharging>
format-charging = +<label-charging>

label-full = 

ramp-capacity-0 = LOW:  
ramp-capacity-0-foreground =  #0f0
ramp-capacity-1 =  
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 =

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

[module/wired-network]
type = internal/network
interface = eth0

label-connected = %local_ip%

[module/cpu]
type = internal/cpu

; Available tokens:
;   %percentage% (default) - total cpu load averaged over all cores
;   %percentage-sum% - Cumulative load on all cores
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = CPU %percentage%%

[module/memory]
type = internal/memory
interval = 3
label =MEM %percentage_used%%

[module/date]
type = internal/date
interval = 1.0
date = %d %b %Y
time = %H.%M
label = %date% // %time%

