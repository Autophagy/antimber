! URxvt

! General settings
URxvt.saveLines: 2000
URxvt.scrollBar: False
URxvt.scrollstyle: rxvt
URxvt.urgentOnBell: True
URxvt.cursorBlink: False

! Extensions
URxvt.urlLauncher: xdg-open
URxvt.urlButton: 1
URxvt.underlineURLs: True

URxvt.copyCommand:  xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard

! Fonts

!DejaVu Sans Mono (Powerline)
URxvt.font: xft:Inconsolata for Powerline:pixelsize=18
URxvt.boldFont: xft:Inconsolata for Powerline:pixelsize=18:style=BoldForPowerline
URxvt.internalBorder: 20

URxvt.foreground: #EBEBEB
URxvt.background: #2D2D2D

! Base16 Grayscale Dark
